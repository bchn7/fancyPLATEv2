<% if(recipe != null ) {%>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Strona Glowna</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></a></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/upload/<%- recipe.image %>" class="image-fluid sticky-top" style="top:20px; width:400px; height:500px;" alt="<%- recipe.name %>" loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1><%- recipe.name %></h1>
                    <div class="col-12 mb-4"><i class="bi bi-tag"</i></div>
                        <div class="col-12" style="white-space: pre-line;">
                        <h4>Instrukcje</h4>
                        <%- recipe.description %>
                        </div>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Skladniki</h4>
                    <ul class="list-group list-group-flush">
                        <% recipe.ingridients.forEach(function(ingridients, index){ %>
                        <li class="list-group-item">
                            <%= ingridients %>
                        </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

<% } else { %>

<p>Nic tu nie ma.</p>

<% } %>